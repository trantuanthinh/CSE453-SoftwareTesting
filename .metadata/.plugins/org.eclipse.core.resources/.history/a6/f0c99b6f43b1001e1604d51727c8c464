package Exercise5;

import static org.junit.Assert.assertTrue;
import static org.junit.jupiter.api.Assertions.*;

import java.lang.reflect.Method;

import org.junit.jupiter.api.Test;

class PointTest {

	@Test
	void testAddAndSub() {
	    Point point1 = new Point(2, 4);
	    Point point2 = new Point(5, 10);
	    Point resultAdd = new Point(7, 14);
	    Point resultSub = new Point(-3, -6); // Adjust the expected result for subtraction
	    assertEquals(resultAdd, point1.add(point2));
	    assertEquals(resultSub, point1.sub(point2)); // Assuming you have a subtract method in your Point class
	}
}
