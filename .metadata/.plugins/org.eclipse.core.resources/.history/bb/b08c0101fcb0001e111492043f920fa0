import static org.junit.jupiter.api.Assertions.*;

import java.io.ByteArrayInputStream;
import java.io.ByteArrayOutputStream;
import java.io.PrintStream;

import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.Test;

class TriangleTest {

	@Test
	void test() {
		fail("Not yet implemented");
	}

	@Test
	@DisplayName("Test Triangle With Valid Number")
	void testValidNumber() {
		// Test case 1: 3 4 5 => true
		String input = "3" + System.lineSeparator() + "4" + System.lineSeparator() + "5";
		ByteArrayInputStream in = new ByteArrayInputStream(input.getBytes());
		System.setIn(in);
		ByteArrayOutputStream out = new ByteArrayOutputStream();
		System.setOut(new PrintStream(out));
		String[] args= {};
		Triangle.main(args);
		String consoleOutput = "Enter side 1: " + System.lineSeparator();
		consoleOutput = "Enter side 2: " +System.lineSeparator();
		consoleOutput = "Enter side 3: "+System.lineSeparator();
		consoleOutput = "This is a triangle." +System.lineSeparator();
		assertEquals(consoleOutput, out.toString());
	}

}
